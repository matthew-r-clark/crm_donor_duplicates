<h2>All Users</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Active</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <form action="/users/edit/<%= user.id %>" method="get">
            <button type="submit">Edit</button>
          </form>
          <form action="/users/remove/<%= user.id %>/confirm" method="get">
            <button type="submit">Remove</button>
          </form>
          <form action="/users/reset-pass/<%= user.id %>" method="get">
            <button type="submit">Reset Password</button>
          </form>
        </td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.username %></td>
        <td>
          <% if user.active %>
            Yes
          <% end %>
        </td>
        <td>
          <% if user.admin %>
            Yes
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>